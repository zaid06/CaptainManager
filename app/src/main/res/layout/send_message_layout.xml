<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:padding="4dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/send_msg_border"
            android:orientation="vertical"
            android:padding="6dp">
            <bilal.com.captain.classes.BoldCustomTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="gone" />
            <bilal.com.captain.classes.RegularCustomTextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:src="@drawable/bike"
            app:civ_border_color="#3b3e56"
            app:civ_border_width="2dp" />
        <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"></LinearLayout>-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/parent_grid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="4dp">
        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="4dp"
            android:gravity="center"
            android:numColumns="3"
            android:verticalSpacing="2dp" />
    </LinearLayout>
</LinearLayout>