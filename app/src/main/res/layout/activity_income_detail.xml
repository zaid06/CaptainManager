<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bilal.com.captain.activityIncomeDetail.IncomeDetailActivity">


    <RelativeLayout
        android:id="@+id/achievetoplayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/achievebackbutton"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_back_arrow" />

        <bilal.com.captain.classes.BoldCustomTextView
            android:id="@+id/achievetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Achieve"
            android:textColor="@color/colorWhite"
            android:textSize="21sp" />


    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorMain"
            android:orientation="horizontal"
            android:padding="4dp">

            <bilal.com.captain.classes.BoldCustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight=".6"
                android:gravity="center"
                android:text="Ride No."
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <bilal.com.captain.classes.BoldCustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

            <bilal.com.captain.classes.BoldCustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="Start Points"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:visibility="gone" />

            <bilal.com.captain.classes.BoldCustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="End Points"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:divider="@color/borderGray"
        android:dividerHeight="1dp"></ListView>

</LinearLayout>
